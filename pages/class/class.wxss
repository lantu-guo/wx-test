/* pages/class/class.wxss */
.list_one{
  padding: 20rpx;
  box-sizing: border-box;
}
.item{
  display: flex;
  width: 100%;
  border-bottom: 1px solid #eee;
  margin-bottom: 20rpx;
  padding: 20rpx
}
.item .img_box{
  width:280rpx;
  height: 300rpx;
}
.item .img_box image{
  width: 100%;
  height: 100%;
}
.item .content_box{
  flex: 1;
  overflow: hidden;
  padding: 20rpx;
  box-sizing: border-box;
}
.item .content_box .title{
  font-size: 35rpx;
  font-weight: bold;
  height: 80rpx;
  overflow: hidden;
  line-height: 80rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.item .content_box .desc{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.item .bottom_box{
  display: flex;
  justify-content: space-between;
 }
 .item .bottom_box view{
   /* margin-right: 30rpx; */
   margin-top: 40rpx;
   font-size: 30rpx;
   border: 1px solid #333;
   padding: 10rpx;
   box-sizing: border-box;
   background-color: rgb(247, 218, 175);
 }
