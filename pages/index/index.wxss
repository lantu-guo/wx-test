/**index.wxss**/
.container{
  width: 100%;
  /* height: 50px; */
  /* border: 1px solid red; */
}
.img{
  width: 100%;
  height: 100%;
}
/* 认识珠峰 */
.know_zf{
  width: 100%;
  padding: 20rpx 0;
  box-sizing: border-box;
}
.title{
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20rpx;
}
.video_box{
  display: block;
  width: 100%;
  position: relative;
  /* height: 100%; */
}
.play_icon>image{
  display: block;
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -60rpx;
  margin-top: -60rpx;
}

/* 限时公开课 */
.list_box{
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
}
.list_box .list{
  width: 50%;
  /* height: 400rpx; */
  padding: 10rpx;
  box-sizing: border-box;
}
.list_box .list image{
  width: 100%;
  height: 300rpx;
}
.list_box .list text{
  overflow: hidden;
  width: 100%;
  display: inline-block;
  text-overflow: ellipsis;
  white-space: nowrap;
}